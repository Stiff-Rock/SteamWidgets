<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/steamWidgetRoot"
        android:orientation="vertical"
        android:background="@color/black"
        android:padding="15dp"
        android:theme="@style/Theme.WakatimeWidgets.AppWidgetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lang_stats_example_title"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

    <TextView
            android:id="@+id/game_label_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lang_stats_ex_1"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />


    <TextView
            android:id="@+id/game_label_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lang_stats_ex_2"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />


    <TextView
            android:id="@+id/game_label_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lang_stats_ex_3"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />
</LinearLayout>